# Environment Configuration Example
# Copy this file to .env and update values

# Camera settings
CAMERA_WIDTH=1280
CAMERA_HEIGHT=720
CAMERA_FPS=30
CAMERA_DEVICE_ID=0

# Gesture Detection
GESTURE_HAND_THRESHOLD=0.7
GESTURE_BODY_THRESHOLD=0.7

# Facial Detection
ENABLE_FACIAL_DETECTION=true
ENABLE_MOOD_DETECTION=true
ENABLE_BLINK_DETECTION=true

# Voice Commands
ENABLE_VOICE_COMMANDS=true
VOICE_LANGUAGE=en-US

# Audio
ENABLE_TEXT_TO_SPEECH=false
ENABLE_MOOD_MUSIC=true
MUSIC_LIBRARY_PATH=music_library

# Logging
LOG_LEVEL=INFO
LOG_FILE=gesture_ai.log
LOG_TO_CONSOLE=true
LOG_TO_FILE=true

# Action Execution
NOTES_DIRECTORY=notes
SCREENSHOTS_DIRECTORY=screenshots
ACTION_LOG_FILE=action_log.json

# API Keys (if using external APIs)
# GOOGLE_API_KEY=your_key_here
